{
  "name": "APIServer",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node ./dist/src/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "test": "cross-env NODE_ENV=test vitest",
    "build": "swc src --out-dir dist --config-file .swcrc && tsc-alias && powershell Copy-Item -Path package.json -Destination dist/",
    "build:linux": "swc src --out-dir dist --config-file .swcrc && tsc-alias && cp package.json dist/",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit push"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "8.0.0",
    "@better-auth/utils": "^0.3.0",
    "@hono/zod-openapi": "^1.1.4",
    "@libsql/client": "^0.14.0",
    "better-auth": "^1.3.26",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "0.8.3",
    "resend": "^6.1.3",
    "stoker": "2.0.1",
    "uploadthing": "^7.7.4",
    "zod": "^4.0.17",
    "@hono/node-server": "^1.17.1",
    "@hono/node-ws": "^1.2.0",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-validator": "^0.7.2",
    "@scalar/hono-api-reference": "^0.9.19",
    "dotenv": "^16.6.1",
    "dotenv-expand": "^12.0.2",
    "hono": "^4.8.5",
    "hono-pino": "^0.7.2",
    "html-to-text": "^9.0.5",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.2",
    "@types/html-to-text": "^9.0.4",
    "@types/node": "^22.16.5",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.4",
    "drizzle-seed": "^0.3.1",
    "eslint": "^9.31.0",
    "eslint-plugin-format": "^0.1.3",
    "globals": "^16.3.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "undici": "^7.12.0",
    "vitest": "^2.1.9"
  }
}
